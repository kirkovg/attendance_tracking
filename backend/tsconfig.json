{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "es2022",
    "lib": [
      "esnext",
      "dom"
    ],
    "noEmit": false,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
  },
  "exclude": ["node_modules"]
}